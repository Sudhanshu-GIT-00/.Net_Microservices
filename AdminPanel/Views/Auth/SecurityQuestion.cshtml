        <h1 class="text-white text-center">Create Security Questions</h1>
        <input type="hidden" id="hdnScrtyId" class="form-control" />
       @*  <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div> *@
