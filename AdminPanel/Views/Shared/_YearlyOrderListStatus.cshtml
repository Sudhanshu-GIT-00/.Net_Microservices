@{
    var approved = "";
    var readyforpickup = "";
    var cancelled = "";
    var orderTime = "";
    var all = "";

    switch (Model[0])
    {
        case "approved":
            approved = "active text-white bg-secondary";
            break;
        case "readyforpickup":
            readyforpickup = "active text-white bg-secondary";
            break;
        case "cancelled":
            cancelled = "active text-white bg-secondary";
            break;
        case "orderTime":
            orderTime = "active text-white bg-secondary";
            break;
        default:
            all = "active text-white bg-secondary";
            break;
    }
}

